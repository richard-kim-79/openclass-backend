{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/server",
    "rootDir": "./src/server",
    "module": "commonjs",
    "target": "ES2022"
  },
  "include": [
    "src/server/**/*",
    "src/shared/**/*",
    "types/**/*"
  ],
  "exclude": [
    "src/client/**/*",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
} 